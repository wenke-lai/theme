{{!< default}}

{{> mobile-sidebar-header 
    showPopularTags=true 
    showLatestPosts=true}}
<main class="container mx-auto px-4 py-8">
  {{!-- Featured Header --}}
  {{> "components/page-header" 
      title="Featured Posts" 
      description="Discover our handpicked collection of featured articles and stories."}}

  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
    {{!-- Main Content --}}
    <div class="lg:col-span-2">
      {{#get "posts" filter="featured:true" as |featured_posts|}}
        {{#if featured_posts}}
          <div class="space-y-1">
            {{#foreach featured_posts}}
              <a href="{{url}}" class="block">
                {{> "components/post-list-card"}}
              </a>
            {{/foreach}}
          </div>
          
          {{!-- Pagination --}}
          {{pagination}}
          
        {{else}}
          {{!-- No Posts State --}}
          <div class="text-center py-12">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-muted mb-4">
              <svg class="w-8 h-8 text-muted-foreground" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </div>
            <h2 class="text-xl font-semibold text-card-foreground mb-2">No featured posts yet</h2>
            <p class="text-muted-foreground mb-4">There are no featured posts available at the moment.</p>
            <a href="{{@site.url}}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md text-sm font-medium text-primary-foreground bg-primary hover:bg-primary/90 transition-colors">
              Back to Home
            </a>
          </div>
        {{/if}}
      {{/get}}
    </div>

    {{!-- Sidebar --}}
    <div class="lg:col-span-1 hidden lg:block">
      {{> "components/page-sidebar" 
          showProfile=true 
          showPopularTags=true 
          showLatestPosts=true}}
    </div>
  </div>
</main>