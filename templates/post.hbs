{{!< default}}

{{#post}}
<article class="min-h-screen bg-background">
  {{!-- Post Hero Section --}}
  <header class="relative">
    {{#if feature_image}}
      <div class="relative aspect-[21/9] overflow-hidden">
        <img src="{{img_url feature_image size="xl"}}" alt="{{title}}" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-t from-background/80 via-background/20 to-transparent"></div>
      </div>
    {{/if}}
    
    <div class="{{#if feature_image}}absolute inset-0 flex items-end{{else}}py-16 bg-muted/30{{/if}}">
      <div class="container mx-auto px-4 {{#if feature_image}}pb-16{{/if}}">
        <div class="max-w-4xl mx-auto">
          {{!-- Post Meta --}}
          <div class="flex items-center gap-3 text-sm text-{{#if feature_image}}white/80{{else}}muted-foreground{{/if}} mb-4">
            {{#if tags}}
              {{#foreach tags limit="1"}}
                <a href="{{url}}" class="inline-flex items-center rounded-full bg-primary px-3 py-1 text-xs font-medium text-primary-foreground hover:bg-primary/90 transition-colors">
                  {{name}}
                </a>
              {{/foreach}}
            {{/if}}
            <time datetime="{{date published_at format='YYYY-MM-DD'}}">{{date published_at format="MMMM DD, YYYY"}}</time>
            <span>•</span>
            <span>{{reading_time}}</span>
            {{#if featured}}
              <span>•</span>
              <div class="flex items-center gap-1">
                <svg class="h-4 w-4 text-featured fill-current" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                <span>Featured</span>
              </div>
            {{/if}}
          </div>
          
          {{!-- Post Title --}}
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-{{#if feature_image}}white{{else}}foreground{{/if}} mb-6 leading-tight">
            {{title}}
          </h1>
          
          {{!-- Post Excerpt --}}
          {{#if excerpt}}
            <p class="text-lg md:text-xl text-{{#if feature_image}}white/90{{else}}muted-foreground{{/if}} mb-8 leading-relaxed">
              {{excerpt}}
            </p>
          {{/if}}
          
          {{!-- Author & Social Share --}}
          <div class="flex items-center justify-between flex-wrap gap-4">
            {{!-- Author Info --}}
            {{#if authors}}
              <div class="flex items-center gap-4">
                {{#foreach authors}}
                  <div class="flex items-center gap-3">
                    {{#if profile_image}}
                      <img src="{{img_url profile_image size="xs"}}" alt="{{name}}" class="w-12 h-12 rounded-full border-2 border-{{#if ../feature_image}}white/20{{else}}border{{/if}}" />
                    {{/if}}
                    <div>
                      <p class="font-medium text-{{#if ../feature_image}}white{{else}}foreground{{/if}}">{{name}}</p>
                      {{#if bio}}
                        <p class="text-sm text-{{#if ../feature_image}}white/80{{else}}muted-foreground{{/if}}">{{bio}}</p>
                      {{/if}}
                    </div>
                  </div>
                {{/foreach}}
              </div>
            {{/if}}
            
            {{!-- Social Share --}}
            <div class="flex items-center gap-2">
              <span class="text-sm text-{{#if feature_image}}white/80{{else}}muted-foreground{{/if}} mr-2">Share:</span>
              <a href="https://twitter.com/intent/tweet?url={{url absolute="true"}}&text={{encode title}}" target="_blank" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-{{#if feature_image}}white/10 hover:bg-white/20{{else}}muted hover:bg-accent{{/if}} text-{{#if feature_image}}white{{else}}foreground{{/if}} transition-colors">
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" target="_blank" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-{{#if feature_image}}white/10 hover:bg-white/20{{else}}muted hover:bg-accent{{/if}} text-{{#if feature_image}}white{{else}}foreground{{/if}} transition-colors">
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="https://www.linkedin.com/sharing/share-offsite/?url={{url absolute="true"}}" target="_blank" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-{{#if feature_image}}white/10 hover:bg-white/20{{else}}muted hover:bg-accent{{/if}} text-{{#if feature_image}}white{{else}}foreground{{/if}} transition-colors">
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  
  {{!-- Post Content --}}
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
        {{!-- Main Content --}}
        <div class="lg:col-span-3">
          {{!-- Post Body --}}
          <div class="prose prose-lg max-w-none text-foreground">
            {{!-- Post Body Content --}}
            <div class="post-content">
              {{{html}}}
            </div>
            
            {{!-- Post Tags --}}
            {{#if tags}}
              <div class="not-prose mt-12 pt-8 border-t border-border">
                <h3 class="text-lg font-semibold text-foreground mb-4">Tags</h3>
                <div class="flex flex-wrap gap-2">
                  {{#foreach tags}}
                    <a href="{{url}}" class="inline-flex items-center rounded-full bg-secondary px-3 py-1 text-sm font-medium text-secondary-foreground hover:bg-accent transition-colors">
                      <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                      </svg>
                      {{name}}
                    </a>
                  {{/foreach}}
                </div>
              </div>
            {{/if}}
          </div>
          
          {{!-- Post Navigation --}}
          <nav class="mt-12 pt-8 border-t border-border">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {{!-- Previous Post --}}
              {{#prev_post}}
                <a href="{{url}}" class="group flex items-center gap-4 p-6 rounded-lg border border-border hover:bg-accent/5 transition-colors">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-muted-foreground group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                  </div>
                  <div class="min-w-0 flex-1">
                    <p class="text-sm text-muted-foreground mb-1">Previous post</p>
                    <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors line-clamp-2">{{title}}</h3>
                  </div>
                </a>
              {{/prev_post}}
              
              {{!-- Next Post --}}
              {{#next_post}}
                <a href="{{url}}" class="group flex items-center gap-4 p-6 rounded-lg border border-border hover:bg-accent/5 transition-colors {{#unless ../prev_post}}md:col-start-2{{/unless}}">
                  <div class="min-w-0 flex-1">
                    <p class="text-sm text-muted-foreground mb-1">Next post</p>
                    <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors line-clamp-2">{{title}}</h3>
                  </div>
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-muted-foreground group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </a>
              {{/next_post}}
            </div>
          </nav>
          
          {{!-- Author Bio Section --}}
          {{#if authors}}
            <section class="mt-12 pt-8 border-t border-border">
              <h3 class="text-xl font-semibold text-foreground mb-6">About the Author{{#if authors.[1]}}s{{/if}}</h3>
              <div class="space-y-6">
                {{#foreach authors}}
                  <div class="flex items-start gap-6 p-6 rounded-lg border border-border bg-card">
                    {{#if profile_image}}
                      <img src="{{img_url profile_image size="s"}}" alt="{{name}}" class="w-20 h-20 rounded-full flex-shrink-0" />
                    {{else}}
                      <div class="w-20 h-20 rounded-full bg-muted flex items-center justify-center flex-shrink-0">
                        <svg class="h-8 w-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                      </div>
                    {{/if}}
                    <div class="flex-1 min-w-0">
                      <h4 class="text-lg font-semibold text-foreground mb-2">{{name}}</h4>
                      {{#if bio}}
                        <p class="text-muted-foreground mb-4">{{bio}}</p>
                      {{/if}}
                      <div class="flex items-center gap-4">
                        {{#if website}}
                          <a href="{{website}}" target="_blank" class="inline-flex items-center gap-2 text-sm text-primary hover:text-primary/80 transition-colors">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                            Website
                          </a>
                        {{/if}}
                        {{#if twitter}}
                          <a href="{{twitter}}" target="_blank" class="inline-flex items-center gap-2 text-sm text-primary hover:text-primary/80 transition-colors">
                            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                            Twitter
                          </a>
                        {{/if}}
                      </div>
                      <div class="mt-4 flex items-center gap-4 text-sm text-muted-foreground">
                        <span>{{plural count.posts empty='No posts' singular='% post' plural='% posts'}}</span>
                        {{#if location}}
                          <span>•</span>
                          <span>{{location}}</span>
                        {{/if}}
                      </div>
                    </div>
                  </div>
                {{/foreach}}
              </div>
            </section>
          {{/if}}
          
          {{!-- Related Posts Section --}}
          <section class="mt-12 pt-8 border-t border-border">
            <h3 class="text-xl font-semibold text-foreground mb-6">Related Posts</h3>
            
            {{#get "posts" filter="tags:[{{#foreach tags}}{{slug}}{{#unless @last}},{{/unless}}{{/foreach}}]+id:-{{id}}" limit="3" as |related_posts|}}
              {{#if related_posts}}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                  {{#foreach related_posts}}
                    <article class="group">
                      <a href="{{url}}" class="block">
                        <div class="aspect-[16/9] overflow-hidden rounded-lg mb-4">
                          {{#if feature_image}}
                            <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="w-full h-full object-cover transition-transform group-hover:scale-105" />
                          {{else}}
                            <div class="w-full h-full bg-muted flex items-center justify-center">
                              <svg class="h-12 w-12 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                              </svg>
                            </div>
                          {{/if}}
                        </div>
                        <div>
                          <div class="flex items-center gap-2 text-xs text-muted-foreground mb-2">
                            <time datetime="{{date published_at format='YYYY-MM-DD'}}">{{date published_at format="MMM DD, YYYY"}}</time>
                            <span>•</span>
                            <span>{{reading_time}}</span>
                          </div>
                          <h4 class="font-semibold text-foreground group-hover:text-primary transition-colors mb-2 line-clamp-2">{{title}}</h4>
                          <p class="text-sm text-muted-foreground line-clamp-3 mb-3">{{excerpt}}</p>
                        </div>
                      </a>
                    </article>
                  {{/foreach}}
                </div>
              {{else}}
                <div class="text-center py-12 text-muted-foreground">
                  <svg class="mx-auto h-12 w-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <p>No related posts found.</p>
                </div>
              {{/if}}
            {{/get}}
          </section>
        </div>
        
        {{!-- Sidebar --}}
        <div class="lg:col-span-1">
          {{> "post/sidebar"}}
        </div>
      </div>
    </div>
  </div>
</article>

<style>
  /* Custom prose styles using CSS variables */
  .prose {
    --tw-prose-body: var(--foreground);
    --tw-prose-headings: var(--foreground);
    --tw-prose-lead: var(--muted-foreground);
    --tw-prose-links: var(--primary);
    --tw-prose-bold: var(--foreground);
    --tw-prose-counters: var(--muted-foreground);
    --tw-prose-bullets: var(--muted-foreground);
    --tw-prose-hr: var(--border);
    --tw-prose-quotes: var(--foreground);
    --tw-prose-quote-borders: var(--border);
    --tw-prose-captions: var(--muted-foreground);
    --tw-prose-code: var(--foreground);
    --tw-prose-pre-code: var(--foreground);
    --tw-prose-pre-bg: var(--muted);
    --tw-prose-th-borders: var(--border);
    --tw-prose-td-borders: var(--border);
  }
  
  /* Koenig editor content styles */
  .kg-width-wide {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 1200px;
  }
  
  .kg-width-full {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
</style>
{{/post}}