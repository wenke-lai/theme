{{!-- Post Sidebar --}}
<aside class="space-y-8 sticky top-20">
  {{!-- Share Buttons --}}
  <div class="rounded-lg border border-border bg-card p-6">
    <h3 class="font-semibold text-foreground mb-4">Share this post</h3>
    <div class="space-y-3">
      <a href="https://twitter.com/intent/tweet?url={{url absolute="true"}}&text={{encode title}}" target="_blank" class="flex items-center gap-3 p-3 rounded-md border border-border hover:bg-accent/5 transition-colors group">
        <div class="flex items-center justify-center w-8 h-8 rounded-md bg-primary/10 text-primary">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </div>
        <span class="text-foreground group-hover:text-primary transition-colors">Share on Twitter</span>
      </a>
      <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" target="_blank" class="flex items-center gap-3 p-3 rounded-md border border-border hover:bg-accent/5 transition-colors group">
        <div class="flex items-center justify-center w-8 h-8 rounded-md bg-primary/10 text-primary">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </div>
        <span class="text-foreground group-hover:text-primary transition-colors">Share on Facebook</span>
      </a>
      <a href="https://www.linkedin.com/sharing/share-offsite/?url={{url absolute="true"}}" target="_blank" class="flex items-center gap-3 p-3 rounded-md border border-border hover:bg-accent/5 transition-colors group">
        <div class="flex items-center justify-center w-8 h-8 rounded-md bg-primary/10 text-primary">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </div>
        <span class="text-foreground group-hover:text-primary transition-colors">Share on LinkedIn</span>
      </a>
    </div>
  </div>
  
  {{!-- Post Stats --}}
  <div class="rounded-lg border border-border bg-card p-6">
    <h3 class="font-semibold text-foreground mb-4">Post Info</h3>
    <div class="space-y-3 text-sm">
      <div class="flex items-center justify-between">
        <span class="text-muted-foreground">Published</span>
        <span class="text-foreground">{{date format="MMM DD, YYYY"}}</span>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-muted-foreground">Reading time</span>
        <span class="text-foreground">{{reading_time}}</span>
      </div>
      {{#if updated_at}}
        <div class="flex items-center justify-between">
          <span class="text-muted-foreground">Updated</span>
          <span class="text-foreground">{{date updated_at format="MMM DD, YYYY"}}</span>
        </div>
      {{/if}}
    </div>
  </div>
  
  {{!-- Related Tags --}}
  {{#if tags}}
    <div class="rounded-lg border border-border bg-card p-6">
      <h3 class="font-semibold text-foreground mb-4">Related Topics</h3>
      <div class="space-y-2">
        {{#foreach tags}}
          <a href="{{url}}" class="flex items-center justify-between p-2 rounded-md hover:bg-accent/5 transition-colors group">
            <span class="text-foreground group-hover:text-primary transition-colors">{{name}}</span>
            <span class="text-xs text-muted-foreground bg-muted px-2 py-1 rounded-full">
              {{plural count.posts empty='0' singular='%' plural='%'}}
            </span>
          </a>
        {{/foreach}}
      </div>
    </div>
  {{/if}}
  
  {{!-- Newsletter Signup --}}
  <div class="rounded-lg border border-border bg-card p-6">
    <h3 class="font-semibold text-foreground mb-2">Get Updates</h3>
    <p class="text-sm text-muted-foreground mb-4">Subscribe for new posts and updates.</p>
    <div class="space-y-3">
      <input type="email" placeholder="Enter your email" class="w-full px-3 py-2 border border-input rounded-md bg-background text-foreground text-sm focus:outline-none focus:ring-1 focus:ring-ring" />
      <button class="w-full bg-primary text-primary-foreground px-4 py-2 rounded-md text-sm font-medium hover:bg-primary/90 transition-colors">
        Subscribe
      </button>
    </div>
  </div>
</aside>