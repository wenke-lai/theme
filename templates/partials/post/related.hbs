{{!-- Related Posts Section --}}
<section class="mt-12 pt-8 border-t border-border">
  <h3 class="text-xl font-semibold text-foreground mb-6">Related Posts</h3>
  
  {{#get "posts" filter="tags:[{{#foreach tags}}{{slug}}{{#unless @last}},{{/unless}}{{/foreach}}]+id:-{{id}}" limit="3" as |related_posts|}}
    {{#if related_posts}}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#foreach related_posts}}
          <article class="group">
            <a href="{{url}}" class="block">
              <div class="aspect-[16/9] overflow-hidden rounded-lg mb-4">
                {{#if feature_image}}
                  <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="w-full h-full object-cover transition-transform group-hover:scale-105" />
                {{else}}
                  <div class="w-full h-full bg-muted flex items-center justify-center">
                    <svg class="h-12 w-12 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                  </div>
                {{/if}}
              </div>
              <div>
                <div class="flex items-center gap-2 text-xs text-muted-foreground mb-2">
                  <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD, YYYY"}}</time>
                  <span>•</span>
                  <span>{{reading_time}}</span>
                  {{#if featured}}
                    <span>•</span>
                    <svg class="h-3 w-3 text-featured fill-current" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {{/if}}
                </div>
                <h4 class="font-semibold text-foreground group-hover:text-primary transition-colors mb-2 line-clamp-2">{{title}}</h4>
                <p class="text-sm text-muted-foreground line-clamp-3 mb-3">{{excerpt}}</p>
                {{#if tags}}
                  <div class="flex items-center space-x-1">
                    {{#foreach tags limit="2"}}
                      <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">{{name}}</span>
                    {{/foreach}}
                  </div>
                {{/if}}
              </div>
            </a>
          </article>
        {{/foreach}}
      </div>
    {{else}}
      {{!-- Fallback to latest posts if no related posts found --}}
      {{#get "posts" filter="id:-{{id}}" limit="3" as |latest_posts|}}
        {{#if latest_posts}}
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#foreach latest_posts}}
              <article class="group">
                <a href="{{url}}" class="block">
                  <div class="aspect-[16/9] overflow-hidden rounded-lg mb-4">
                    {{#if feature_image}}
                      <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="w-full h-full object-cover transition-transform group-hover:scale-105" />
                    {{else}}
                      <div class="w-full h-full bg-muted flex items-center justify-center">
                        <svg class="h-12 w-12 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                        </svg>
                      </div>
                    {{/if}}
                  </div>
                  <div>
                    <div class="flex items-center gap-2 text-xs text-muted-foreground mb-2">
                      <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD, YYYY"}}</time>
                      <span>•</span>
                      <span>{{reading_time}}</span>
                      {{#if featured}}
                        <span>•</span>
                        <svg class="h-3 w-3 text-featured fill-current" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      {{/if}}
                    </div>
                    <h4 class="font-semibold text-foreground group-hover:text-primary transition-colors mb-2 line-clamp-2">{{title}}</h4>
                    <p class="text-sm text-muted-foreground line-clamp-3 mb-3">{{excerpt}}</p>
                    {{#if tags}}
                      <div class="flex items-center space-x-1">
                        {{#foreach tags limit="2"}}
                          <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">{{name}}</span>
                        {{/foreach}}
                      </div>
                    {{/if}}
                  </div>
                </a>
              </article>
            {{/foreach}}
          </div>
        {{else}}
          <div class="text-center py-12 text-muted-foreground">
            <svg class="mx-auto h-12 w-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <p>No related posts found.</p>
          </div>
        {{/if}}
      {{/get}}
    {{/if}}
  {{/get}}
</section>