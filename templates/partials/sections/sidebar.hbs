<aside class="space-y-8">
  {{!-- Site Info Section --}}
  <div class="rounded-lg border border-border bg-card p-6">
    <div class="flex items-center space-x-3 mb-4">
      {{#if @site.icon}}
        <img src="{{@site.icon}}" alt="{{@site.title}}" class="h-10 w-10 rounded-full" />
      {{/if}}
      <div>
        <h3 class="font-semibold text-foreground">{{@site.title}}</h3>
        <div class="flex items-center space-x-1 text-muted-foreground">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
          <span class="text-sm">Threads</span>
        </div>
      </div>
    </div>
    {{#if @site.description}}
      <p class="text-sm text-muted-foreground">{{@site.description}}</p>
    {{/if}}
  </div>

  {{!-- Popular Tags Section --}}
  <div class="rounded-lg border border-border bg-card p-6">
    <h3 class="font-semibold text-foreground mb-4">Popular Tags</h3>
    {{#get "tags" limit="6" include="count.posts" order="count.posts desc" as |popular_tags|}}
      {{#if popular_tags}}
        <div class="space-y-3">
          {{#foreach popular_tags}}
            <a href="{{url}}" class="flex items-center justify-between p-3 rounded-md border border-border hover:bg-accent/5 transition-colors group">
              <div class="flex items-center space-x-3">
                <div class="h-8 w-8 rounded-md bg-primary/10 flex items-center justify-center">
                  <svg class="h-4 w-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium text-foreground group-hover:text-primary transition-colors">{{name}}</h4>
                  {{#if description}}
                    <p class="text-xs text-muted-foreground line-clamp-1">{{description}}</p>
                  {{/if}}
                </div>
              </div>
              <span class="text-xs text-muted-foreground bg-muted px-2 py-1 rounded-full">
                {{plural count.posts empty='0 Posts' singular='% Post' plural='% Posts'}}
              </span>
            </a>
          {{/foreach}}
        </div>
      {{else}}
        <p class="text-sm text-muted-foreground">No tags yet.</p>
      {{/if}}
    {{/get}}
  </div>

  {{!-- Newsletter Section --}}
  <div class="rounded-lg border border-border bg-card p-6">
    <h3 class="font-semibold text-foreground mb-2">Stay Updated</h3>
    <p class="text-sm text-muted-foreground mb-4">Subscribe to get the latest posts delivered right to your inbox.</p>
    <div class="space-y-3">
      <input type="email" placeholder="Enter your email" class="w-full px-3 py-2 border border-input rounded-md bg-background text-foreground text-sm focus:outline-none focus:ring-1 focus:ring-ring" />
      <button class="w-full bg-primary text-primary-foreground px-4 py-2 rounded-md text-sm font-medium hover:bg-primary/90 transition-colors">
        Subscribe
      </button>
    </div>
  </div>

  {{!-- Social Links Section --}}
  {{#if @site.twitter}}
    <div class="rounded-lg border border-border bg-card p-6">
      <h3 class="font-semibold text-foreground mb-4">Connect</h3>
      <div class="flex space-x-3">
        {{#if @site.twitter}}
          <a href="{{@site.twitter}}" class="flex items-center justify-center w-10 h-10 rounded-md bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground transition-colors">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        {{/if}}
        {{#if @site.facebook}}
          <a href="{{@site.facebook}}" class="flex items-center justify-center w-10 h-10 rounded-md bg-primary/10 text-primary hover:bg-primary hover:text-primary-foreground transition-colors">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        {{/if}}
      </div>
    </div>
  {{/if}}
</aside>