<section>
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-foreground">Featured</h2>
    <a href="{{@site.url}}/featured/" class="text-sm text-primary hover:text-primary/80 transition-colors font-medium">View All â†’</a>
  </div>
  
  {{#get "posts" filter="featured:true" limit="3" as |featured_posts|}}
    {{#if featured_posts}}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {{#foreach featured_posts}}
          {{#if @first}}
            {{!-- Large featured post on the left --}}
            <a href="{{url}}" class="block md:row-span-2">
              {{> "components/post-grid-card" large=true}}
            </a>
          {{else}}
            {{!-- Small featured posts on the right in 2 rows --}}
            <a href="{{url}}" class="block">
              {{> "components/post-grid-card"}}
            </a>
          {{/if}}
        {{/foreach}}
      </div>
    {{else}}
      <div class="text-center py-12 text-muted-foreground">
        <svg class="mx-auto h-12 w-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
        <p>No featured posts yet.</p>
      </div>
    {{/if}}
  {{/get}}
</section>