{{!< default}}

<main class="container mx-auto px-4 py-8">
  {{!-- Tag Header --}}
  <header class="mb-8">
    {{#tag}}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:items-center">
        <div class="lg:col-span-2 text-center lg:text-left">
          <h1 class="text-4xl md:text-5xl font-bold text-card-foreground mb-4">{{name}}</h1>
          
          {{#if description}}
            <p class="text-xl text-muted-foreground">{{description}}</p>
          {{/if}}
        </div>
        
        {{#if feature_image}}
          <div class="lg:col-span-1">
            <div class="aspect-[4/3] overflow-hidden rounded-xl max-w-sm mx-auto lg:max-w-none">
              <img class="w-full h-full object-cover"
                   srcset="{{img_url feature_image size="s"}} 300w,
                           {{img_url feature_image size="m"}} 600w,
                           {{img_url feature_image size="l"}} 1000w"
                   sizes="(max-width: 1024px) 100vw, 33vw"
                   src="{{img_url feature_image size="m"}}"
                   alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{name}}{{/if}}" />
            </div>
          </div>
        {{/if}}
      </div>
    {{/tag}}
  </header>

  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
    {{!-- Main Content --}}
    <div class="lg:col-span-2">
      
      {{#if posts}}
        <div class="space-y-1">
          {{#foreach posts}}
            <a href="{{url}}" class="block">
              {{> "components/post-list-card"}}
            </a>
          {{/foreach}}
        </div>
        
        {{!-- Pagination --}}
        {{pagination}}
        
      {{else}}
        {{!-- No Posts State --}}
        <div class="text-center py-12">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-muted mb-4">
            <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-card-foreground mb-2">No posts found</h2>
          {{#tag}}
            <p class="text-muted-foreground mb-4">There are no posts tagged with "{{name}}" yet.</p>
          {{/tag}}
          <a href="{{@site.url}}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md text-sm font-medium text-primary-foreground bg-primary hover:bg-primary/90 transition-colors">
            Back to Home
          </a>
        </div>
      {{/if}}
    </div>

    {{!-- Sidebar --}}
    <div class="lg:col-span-1">
      {{> "components/sidebar" 
          showProfile=true 
          showPopularTags=true 
          showLatestPosts=true}}
    </div>
  </div>
</main>