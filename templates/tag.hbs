{{!< default}}

{{#tag}}
<main class="min-h-screen bg-background">
  {{!-- Tag Header --}}
  <header class="py-16 bg-gradient-to-r from-primary/10 via-primary/5 to-transparent">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        {{!-- Tag Icon --}}
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
        </div>
        
        {{!-- Tag Title --}}
        <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">{{name}}</h1>
        
        {{!-- Tag Description --}}
        {{#if description}}
          <p class="text-lg md:text-xl text-muted-foreground mb-6 leading-relaxed">{{description}}</p>
        {{/if}}
        
        {{!-- Tag Meta --}}
        <div class="flex items-center justify-center gap-4 text-sm text-muted-foreground">
          <span class="inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            {{plural count.posts empty='No posts' singular='% post' plural='% posts'}}
          </span>
          {{#if feature_image}}
            <span>•</span>
            <span>Featured tag</span>
          {{/if}}
        </div>
      </div>
    </div>
  </header>
  
  {{!-- Posts Content --}}
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      {{#if posts}}
        {{!-- Posts Grid --}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {{#foreach posts}}
            <article class="group">
              <a href="{{url}}" class="block">
                {{!-- Post Image --}}
                <div class="aspect-[16/9] overflow-hidden rounded-lg mb-4">
                  {{#if feature_image}}
                    <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="w-full h-full object-cover transition-transform group-hover:scale-105" />
                  {{else}}
                    <div class="w-full h-full bg-muted flex items-center justify-center">
                      <svg class="h-12 w-12 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                      </svg>
                    </div>
                  {{/if}}
                  {{#if featured}}
                    <div class="absolute top-3 left-3">
                      <span class="inline-flex items-center rounded-full bg-featured px-2 py-1 text-xs font-medium text-white">
                        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                        Featured
                      </span>
                    </div>
                  {{/if}}
                </div>
                
                {{!-- Post Content --}}
                <div>
                  {{!-- Post Meta --}}
                  <div class="flex items-center gap-2 text-xs text-muted-foreground mb-3">
                    <time datetime="{{date published_at format='YYYY-MM-DD'}}">{{date published_at format="MMM DD, YYYY"}}</time>
                    <span>•</span>
                    <span>{{reading_time}}</span>
                    {{#if authors}}
                      <span>•</span>
                      <span>{{#foreach authors limit="1"}}{{name}}{{/foreach}}</span>
                    {{/if}}
                  </div>
                  
                  {{!-- Post Title --}}
                  <h2 class="text-xl font-semibold text-foreground group-hover:text-primary transition-colors mb-3 line-clamp-2">{{title}}</h2>
                  
                  {{!-- Post Excerpt --}}
                  {{#if excerpt}}
                    <p class="text-muted-foreground line-clamp-3 mb-4">{{excerpt}}</p>
                  {{/if}}
                  
                  {{!-- Other Tags --}}
                  {{#if tags}}
                    <div class="flex items-center space-x-2">
                      {{#foreach tags limit="3"}}
                        {{#unless (has slug=../slug)}}
                          <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">{{name}}</span>
                        {{/unless}}
                      {{/foreach}}
                    </div>
                  {{/if}}
                </div>
              </a>
            </article>
          {{/foreach}}
        </div>
        
        {{!-- Pagination --}}
        {{pagination}}
        
      {{else}}
        {{!-- No Posts State --}}
        <div class="text-center py-20">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-muted mb-6">
            <svg class="w-10 h-10 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-semibold text-foreground mb-2">No posts found</h2>
          <p class="text-muted-foreground mb-6">There are no posts tagged with "{{name}}" yet.</p>
          <a href="{{@site.url}}" class="inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-primary-foreground bg-primary hover:bg-primary/90 transition-colors">
            Back to Home
          </a>
        </div>
      {{/if}}
    </div>
  </div>
  
  {{!-- Related Tags Section --}}
  <section class="py-12 bg-muted/30">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h3 class="text-2xl font-semibold text-foreground mb-8">Other Tags</h3>
        {{#get "tags" limit="12" include="count.posts" filter="slug:-{{slug}}" as |other_tags|}}
          {{#if other_tags}}
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
              {{#foreach other_tags}}
                <a href="{{url}}" class="group flex items-center gap-3 p-4 rounded-lg border border-border bg-card hover:bg-accent/5 transition-colors">
                  <div class="flex items-center justify-center w-10 h-10 rounded-md bg-primary/10 text-primary">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h4 class="font-medium text-foreground group-hover:text-primary transition-colors truncate">{{name}}</h4>
                    <p class="text-xs text-muted-foreground">{{plural count.posts empty='0 posts' singular='% post' plural='% posts'}}</p>
                  </div>
                </a>
              {{/foreach}}
            </div>
          {{else}}
            <p class="text-muted-foreground">No other tags available.</p>
          {{/if}}
        {{/get}}
      </div>
    </div>
  </section>
</main>
{{/tag}}